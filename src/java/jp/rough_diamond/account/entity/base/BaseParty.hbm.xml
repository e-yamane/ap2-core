<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>

    <class
        name="jp.rough_diamond.account.entity.Party"
        table="PARTY"
    >

        <id
            name="id"
            column="ID"
            type="java.lang.Long"
        >
            <generator class="assigned">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-BaseParty.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="partyCode"
            type="java.lang.String"
            update="true"
            insert="true"
            column="PARTY_CODE"
            length="256"
            not-null="true"
        />

        <property
            name="name"
            type="java.lang.String"
            update="true"
            insert="true"
            column="NAME"
            length="256"
            not-null="true"
        />

        <property
            name="revision"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="REVISION"
            not-null="true"
        />

        <property
            name="statusCode"
            type="java.lang.String"
            update="true"
            insert="true"
            column="STATUS_CODE"
            length="2"
            not-null="true"
        />

        <component
            name="timeStamp"
            class="jp.rough_diamond.account.entity.UpdateTimestamp"
        >

        <property
            name="registererDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="TSREGISTERER_DATE"
            not-null="true"
        />

        <property
            name="lastModifiedDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="TSLAST_MODIFIED_DATE"
            not-null="true"
        />

        </component>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-BaseParty.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
