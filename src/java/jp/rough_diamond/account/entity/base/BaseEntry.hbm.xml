<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>

    <class
        name="jp.rough_diamond.account.entity.Entry"
        table="ENTRY"
    >

        <id
            name="id"
            column="ID"
            type="java.lang.Long"
        >
            <generator class="assigned">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-BaseEntry.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <component
            name="amount"
            class="jp.rough_diamond.commons.entity.Amount"
        >

        <component
            name="quantity"
            class="jp.rough_diamond.commons.entity.ScalableNumber"
        >

        <property
            name="value"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="AMOUNT_Q_VALUE"
            not-null="true"
        />

        <property
            name="scale"
            type="java.lang.Integer"
            update="true"
            insert="true"
            column="AMOUNT_Q_SCALE"
            not-null="true"
        />

        </component>

        <many-to-one
            name="unit"
            class="jp.rough_diamond.commons.entity.Unit"
            cascade="none"
            outer-join="true"
            update="true"
            insert="true"
        >
            <column
                name="AMOUNT_UNIT_ID" 
            />
        </many-to-one>

        </component>

        <many-to-one
            name="account"
            class="jp.rough_diamond.account.entity.Account"
            cascade="none"
            outer-join="true"
            update="true"
            insert="true"
        >
            <column
                name="ACCOUNT_ID" 
            />
        </many-to-one>

        <many-to-one
            name="transaction"
            class="jp.rough_diamond.account.entity.Transaction"
            cascade="none"
            outer-join="true"
            update="true"
            insert="true"
        >
            <column
                name="TRANSACTION_ID" 
            />
        </many-to-one>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-BaseEntry.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
